<!-- Heart container -->
<div id="hearts"></div>

<div class="wrap">
  <h1>CONFESSION TERMINAL</h1>
  <div id="terminal"></div>
  <div class="small">Tip: Love looks even better in your own words ðŸ’Œ</div>
  <div class="controls">
    <button id="replay">Replay</button>
    <button id="download" class="secondary">Copy message</button>
  </div>
</div>

<script>
/* Terminal text */
const terminal = document.getElementById('terminal');
const lines = [
  "Initializing connection to your heart... ðŸ’—",
  "Connection stable â€” emotions detected.",
  "Searching for the right words...",
  "Found: You are the most beautiful chapter of my story.",
  "When you smile, the world slows down.",
  "I could spend every sunrise and sunset just with you.",
  "So, will you let me be the reason for your smiles?",
  "â€” End of message. Awaiting your lovely response... ðŸ’–"
];
let li = 0, ci = 0;

function typeStep(){
  if(li >= lines.length) return showCursor(false);
  showCursor(true);
  if(ci < lines[li].length){
    terminal.innerHTML = terminal.innerHTML.replace('<span class="cursor"></span>','') + lines[li].charAt(ci++) + '<span class="cursor"></span>';
    setTimeout(typeStep, 40 + Math.random()*60);
  } else {
    terminal.innerHTML = terminal.innerHTML.replace('<span class="cursor"></span>','') + '\n';
    li++; ci = 0;
    setTimeout(typeStep, 500);
  }
}
function showCursor(yes){
  if(yes && !terminal.innerHTML.includes('cursor')) terminal.innerHTML += '<span class="cursor"></span>';
  if(!yes) terminal.innerHTML = terminal.innerHTML.replace('<span class="cursor"></span>','');
}
document.getElementById('replay').addEventListener('click', ()=>{
  li = 0; ci = 0; terminal.textContent = ''; typeStep();
});
document.getElementById('download').addEventListener('click', ()=>{
  navigator.clipboard.writeText(lines.join('\n')).then(()=> alert('Message copied â€” send it with ðŸ’—'));
});
typeStep();

/* Falling hearts effect */
const heartsContainer = document.getElementById('hearts');
function createHeart(){
  const heart = document.createElement('div');
  heart.className = 'heart';
  heart.innerHTML = 'ðŸ’—';
  heart.style.left = Math.random() * 100 + 'vw';
  heart.style.fontSize = (Math.random() * 20 + 14) + 'px';
  const duration = Math.random() * 3 + 5;
  heart.style.animationDuration = duration + 's';
  heart.style.animationName = 'fallAndSway, glow';
  heart.style.animationTimingFunction = 'linear, ease-in-out';
  heart.style.animationIterationCount = '1, infinite';
  heartsContainer.appendChild(heart);
  setTimeout(()=> heart.remove(), duration * 1000);
}
setInterval(createHeart, 80);
</script>
